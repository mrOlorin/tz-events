{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "declaration": true,
    "pretty": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "include": [
    "./app/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
